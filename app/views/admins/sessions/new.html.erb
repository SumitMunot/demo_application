<div class="container">
  <div class="omb_login">
  	<h3 class="omb_authTitle"> Admin Login </h3>
		<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),class: "omb_loginForm", autocomplete: "off" ) do |f| %>
			<div class="row omb_row-sm-offset-3">
				<div class="col-xs-12 col-sm-6">
						<div class="input-group">
							<span class="input-group-addon"><i class="fa fa-user"></i></span>
							<%= f.input :email, autofocus: true, :label => false, :input_html => { :class => "form-control", :placeholder => 'email address', required: true } %>
						</div>
						<span class="help-block"></span>					
						<div class="input-group">
							<span class="input-group-addon"><i class="fa fa-lock" style="width:11px;"></i></span>
					    <%= f.input :password, required: true, :label => false, :input_html => { :class => "form-control", :placeholder => 'Password' } %>
						</div>
	          <span class="help-block"></span>
				 		<%= f.button :submit, "Sign in", :class => "btn btn-lg btn-primary btn-block" %>
				</div>
	  	</div>

			<div class="row omb_row-sm-offset-3">
				<div class="col-xs-12 col-sm-3">
					<label class="checkbox">
						<%= f.input :remember_me,inline_label: 'Yes, remember me', :label => false,as: :boolean if devise_mapping.rememberable? %>
					</label>
				</div>
			</div>
		<% end %>
   	
	</div>
</div>
